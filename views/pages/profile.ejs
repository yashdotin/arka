<% layout('/layouts/boilerplate.ejs') %>

<div class="container mt-5 col-md-6 offset-md-3 shadow-lg p-4 rounded-4 bg-light">
  <div class="text-center mb-4">
    <img src="https://cdn-icons-png.flaticon.com/512/12225/12225935.png" 
         alt="Profile Picture" 
         class="rounded-circle border" 
         width="120" height="120">
    <h2 class="mt-3 text-primary"><%= data.fullName || data.username %></h2>
    <p class="text-muted">@<%= data.username %></p>
  </div>

  <hr>

  <div>
    <p><i class="fa-solid fa-envelope me-2 text-primary"></i><strong>Email:</strong> <%= data.email %></p>
    <% if (data.bio) { %>
      <p><i class="fa-solid fa-quote-left me-2 text-primary"></i><strong>Bio:</strong> <%= data.bio %></p>
    <% } %>
    <% if (data.location) { %>
      <p><i class="fa-solid fa-location-dot me-2 text-primary"></i><strong>Location:</strong> <%= data.location %></p>
    <% } %>
    
  </div>

  <div class="mt-4 text-center">
    <a href="/edit" class="btn btn-outline-primary px-4"><i class="fa-solid fa-user-pen me-2"></i>Edit Profile</a>
  </div>
</div>
